from .third_party import ox 

def building_pie_func(*args):
    tags = {'building': True, }
    if len(args) == 3 and isinstance(args[0], str):
        name = args[0]
        n = args[1]
        m = args[2]
        print(f'Processing plot: {name}')
        buildings = ox.geometries_from_place(name, tags=tags)
    elif len(args) == 6:
        print('Processing lat long grid')
        buildings = ox.geometries_from_bbox(args[0], args[1], args[2], args[3], tags=tags) #north, south, east, west
        n = args[4]
        m = args[5]
    else:
        print('Invalid arguments passed. Either -')
        print('        3 values: The name of a given area, number of building types in pie chart, number of values of bar plot')
        print('        6 values: lat1, lat2, lon1, lon2, number of building types in pie chart, number of values of bar plot')

    return buildings
